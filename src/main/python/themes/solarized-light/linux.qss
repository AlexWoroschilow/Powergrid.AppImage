QMainWindow { background: #ffffff; }

QTabBar { background: rgb(236,236,236); color: #4f4f4f; font-size: 16px; border: none; }
QTabWidget { background: #ffffff; border: none; margin: 0px; }
QTabWidget::pane { background: #ffffff; border: none; margin: 0px; border-left: 1px solid #d0e8fa; }
QTabWidget::tab-bar { left: 0px; color: #4f4f4f; border: none; }
QTabBar::tab { background: #ffffff; color: #4d5357; border-right: 2px solid #ffffff; padding: 5px; }
QTabBar::tab:selected { background: #ffffff; border-right: 2px solid #2ca7f8;  color: #2ca7f8;  }
QTabBar::tab:!selected { background: #ffffff; }
QTabBar::close-button { image: url(icons/close); }

QListView { background: #ffffff; border: none; font-size: 16px; }
QListView::item { border: none; color: #4f4f4f; padding: 3px 10px; }
QListView::item:hover { background: #f9f9f9; }
QListView::item:selected:active { background: #d0e8fa; color: #2ca7f8; border: none; }
QListView::item:hover:selected { background: #d0e8fa; color: #2ca7f8; }
QListView::item:selected { background: #d0e8fa; color: #2ca7f8;}
QListView::item:hover{ background: #d0e8fa; color: #2ca7f8; }

QSplitter { background: #ffffff; border: none; }
QSplitter::handle { image: url(icons/splitter-light); }
QSplitter::handle:vertical { height: 5px; border-right: 1px solid #d0e8fa;  }

QHeaderView::section { background:#ffffff; }

TranslatorWidget TranslatorContainerDescription { background-color: #fdf6e3; padding: 15px 0px 0px 0px; }
TranslatorWidget TranslatorContainerDescription PictureButtonFlat { border: none; padding: 5px; }
TranslatorWidget TranslatorContainerDescription SearchField { font-size: 16px;  padding: 5px; border: 1px solid #e4e4e4; }
TranslatorWidget TranslatorContainerDescription TranslationWidget {	background: #fdf6e3; color:#4d5357; border-top: 1px solid #eee8d5; margin: 10px; padding: 5px 15px; }

QDialog { background: #fdf6e3; }
QDialog QTextEdit {	background: #fdf6e3; color:#4d5357; border: 1px solid #eee8d5; margin: 0px; padding: 5px 15px; }

StatisticWidget StatisticCalendar { background-color: #ffffff; selection-color: #000; }
StatisticWidget StatisticCalendar QAbstractItemView { background-color: #ffffff; padding: 0px; }
StatisticWidget StatisticCalendar QWidget { alternate-background-color: #f9f9f9; }
StatisticWidget StatisticCalendar QMenu { font-size: 16px; color: #4F4F4F; background-color: #f9f9f9; border: 1px solid #c0c0c0; font-size: 18px; }
StatisticWidget StatisticCalendar QWidget#qt_calendar_navigationbar { background-color: #ffffff; }
StatisticWidget StatisticCalendar QToolButton { background-color: #ffffff; color: #4F4F4F; font-size: 26px; min-width: 30px; }
StatisticWidget StatisticCalendar QToolButton::menu-indicator { height: 30px; width: 15px; }
StatisticWidget StatisticCalendar QSpinBox { font-size: 26px; }

HistoryWidget { background: #fdf6e3; }
HistoryWidget HistoryTable { background: #fdf6e3; border: none; }
HistoryWidget HistoryTable::item:selected { background-color: #d0e8fa; color: #000000; border: none; }
HistoryWidget HistoryTable QTableCornerButton::section { background: #d0e8fa; border: none; }
HistoryWidget HistoryTable QHeaderView { background: #f9f9f9; border: none;  }
HistoryWidget HistoryTable QHeaderView::section { background-color: #f9f9f9; border: 1px; padding: 5px 8px;  }
HistoryWidget HistoryTable QHeaderView::section:checked { background-color: #d0e8fa; }

SettingsScrollArea { background: #ffffff; }

SettingsWidget { background: #FFFFFF; padding: 0px; margin: 0px;}
SettingsWidget PictureButtonFlat { padding: 0px; margin: 0px; text-align: left; }

SettingsWidget SettingsScrollArea { background: #FFFFFF; }
SettingsWidget SettingsTitle { text-align: center; font-size: 18px; padding: 5px 0px; }

QMenu { background-color: #ffffff; border: 1px solid #d0d0d0; }
QMenu::item { padding: 5px 25px 5px 30px; border: 1px solid transparent; }
QMenu::icon { padding: 0px 5px 0px 5px; }
QMenu::item:selected { border-color: #FFFFFF; background: #FFFFFF; }
QMenu::icon:checked { background: #ffffff; border: 1px inset #ffffff; position: absolute; top: 1px; right: 1px; bottom: 1px; left: 1px; }
